<h1>Edit Article</h1>

<%= form_with(model: [:admin, @article], local: true, html: { multipart: true }) do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>

  <div>
    <%= form.label :image %>
    <%= form.file_field :image %>
    <% if @article.image.attached? %>
      <%= image_tag @article.image %>
    <% end %>
  </div>

  <div>
    <%= form.submit 'Update Article' %>
  </div>
<% end %>
